<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="~/Content/resetStyles.css" rel="stylesheet" />
    <link href="~/Content/Styles.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/JavaScript.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <header><div>Блог</div><div><img src="~/Images/blogger_logo original-01.jpg" /></div></header>
    <main>
        <div class="main-body">
            @RenderBody()
        </div>
        <aside class="right-sidebar">
            @RenderSection("Menu", false)

        @if ( ViewBag.Title == "Главная" )
            {
            Html.RenderPartial("Voting");
            }
        </aside>
    </main>

    <footer>
        <button onclick="topFunction()" id="myBtn" class="button " title="Go to top">&#9400 back to top</button>
    </footer>

</body>
</html>