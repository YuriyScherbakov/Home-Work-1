@model DAL.Models.Article

<div class="main-content">
   
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Добавление новой статьи</h4>
            <hr/>
        
            <div class="form-group">
             
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control",
                            placeholder = "Название статьи"
                        }
                    })
                    <br>
                    @Html.ValidationMessageFor(model => model.Name, "", new
                    {
                        @class = "text-danger"
                    })
                </div>
            </div>

            <div class="form-group">
             
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Text,new
                    {
                        @class = "form-control",
                        placeholder = "Содержание статьи",
                        style = "height:500px"
                    })
                    <br>
                    @Html.ValidationMessageFor(n => n.Text, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Сохранить статью" class="btn btn-default"/>
                    @Html.ActionLink("Вернуться к списку","Index",null,
                        new
                            {
                            @class = "btn btn-default"
                            })
                </div>
            </div>
        </div>
    }

 
   
</div>
